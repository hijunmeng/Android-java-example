<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".statusbar.StatusBarActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetStatusBarHeight"
            android:text="获得状态栏高度" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetStatusBarHeightWithVisibility"
            android:text="获得状态栏高度（根据可见性）" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetNavigationBarHeight"
            android:text="获得导航栏高度" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetNavigationBarHeightWithVisibility"
            android:text="获得导航栏高度（根据可见性）" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetScreenWidth"
            android:text="获得屏幕宽度" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetScreenHeight"
            android:text="获得屏幕高度" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGetContentHeight"
            android:text="获得内容区高度" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckNotchScreen"
            android:text="是否刘海屏或挖孔屏" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckStatusBar"
            android:text="状态栏是否可见" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckNavigationBar"
            android:text="导航栏是否可见" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickShowStatusBarAndNavigationBar"
            android:text="显示状态栏和导航栏" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickLowProfile"
            android:text="调暗状态栏和导航栏" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickHideStatusBar"
            android:text="隐藏状态栏\n(在状态栏处滑动会出现半透明状态栏，几秒后消失)" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickHideNavigationBar"
            android:text="隐藏导航栏\n(在导航栏处滑动会出现半透明导航栏，几秒后消失)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickTransparentStatusBar"
            android:text="沉浸式状态栏" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickTransparentNavigationBar"
            android:text="沉浸式导航栏（会导致状态栏遮盖内容区）" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSetStatusBarBg"
            android:text="修改状态栏背景颜色" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSetStatusBarLightMode"
            android:text="修改状态栏文字颜色(黑)" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSetStatusBarDarkMode"
            android:text="修改状态栏文字颜色(白)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFullScreen"
            android:text="全屏--向后倾斜\n(有交互会退出全屏)"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickRealFullScreen"
            android:text="全屏--沉浸模式\n(上下边缘滑动会退出全屏)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickStickyFullScreen"
            android:text="全屏--粘性沉浸模式\n(上下边缘滑动会显示透明状态栏和导航栏，几秒后会自动进入全屏)" />



    </LinearLayout>
</ScrollView>