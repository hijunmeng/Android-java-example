<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher"
    tools:context=".statusbar.StatusBarActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickShowStatusBar"
        android:text="显示状态栏" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickHideStatusBar"
        android:text="隐藏状态栏(home键回来后状态栏会显示)" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLowProfile"
        android:text="调暗状态栏和导航栏" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickTransparentStatusBar"
        android:text="沉浸式状态栏" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickHideNavigationBar"
        android:text="隐藏导航栏(有交互导航栏会重新出现)" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickTransparentNavigationBar"
        android:text="沉浸式导航栏" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickFullScreen"
        android:text="全屏(有交互会退出全屏)"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRealFullScreen"
        android:text="全屏(上下边缘滑动会退出全屏)" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickStickyFullScreen"
        android:text="全屏(上下边缘滑动会显示透明状态栏和导航栏，几秒后会自动进入全屏)" />
</LinearLayout>